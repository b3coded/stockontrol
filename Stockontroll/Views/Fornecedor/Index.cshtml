@model IEnumerable<Stockontroll.Models.Fornecedor>
@using Stockontroll.DAO;
@using Stockontroll.Models;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Stockontroll.DAO.StockontrolContext db = new StockontrolContext();
}

<div class="row">
    <div class="col">
        <h2>Fornecedores</h2>
    </div>
    <div class="col text-right">
        <a href="@Url.Action("Create", "Fornecedor")"  class="btn btn-primary">Adicionar</a>
    </div>
</div>

<table class="table mt-3">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CNPJ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>

            @Html.DisplayNameFor(model => db.Enderecos.ToList().Find(e => e.Id == model.enderecoId).Rua)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CNPJ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            @{
                Endereco e = db.Enderecos.ToList().Find(endereco => endereco.Id == item.enderecoId);
                String adress = (e.Rua + ", " + e.Bairro + " - " + e.Cidade);
            }
            <td>
                @adress
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
